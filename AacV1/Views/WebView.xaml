<UserControl x:Class="AacV1.Views.WebView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <Button Content="戻る" Command="{Binding BackCommand}" Margin="4" />
            <Button Content="進む" Command="{Binding ForwardCommand}" Margin="4" />
            <Button Content="更新" Command="{Binding RefreshCommand}" Margin="4" />
            <Button Content="ホーム" Command="{Binding HomeCommand}" Margin="4" />
            <TextBox Width="420" Text="{Binding Url, UpdateSourceTrigger=PropertyChanged}" Margin="8,0" />
            <Button Content="移動" Command="{Binding NavigateCommand}" Margin="4" />
        </StackPanel>
        <wv2:WebView2 x:Name="Browser" Grid.Row="1" />
    </Grid>
</UserControl>

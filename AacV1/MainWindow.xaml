<Window x:Class="AacV1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AacV1" Height="720" Width="1280" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Background="#2B579A" Padding="12">
            <DockPanel>
                <TextBlock Text="{Binding ScreenTitle}" Foreground="White" FontSize="28" FontWeight="Bold" DockPanel.Dock="Left" />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding InputModeStatus}" Foreground="White" Margin="12,0" />
                    <TextBlock Text="{Binding ScanStatus}" Foreground="White" Margin="12,0" />
                    <TextBlock Text="{Binding DwellStatus}" Foreground="White" Margin="12,0" />
                    <TextBlock Text="{Binding TtsStatus}" Foreground="White" Margin="12,0" />
                    <TextBlock Text="接続: {Binding AppState.StatusMessage}" Foreground="White" Margin="12,0" />
                </StackPanel>
            </DockPanel>
        </Border>

        <ContentControl Grid.Row="1" Content="{Binding CurrentViewModel}" />

        <Border Grid.Row="2" Background="#333" Padding="8">
            <TextBlock Foreground="White" Text="Enter=決定 / Esc=戻る / F1=支援者 / F2=ホーム / F3=セルフテスト / F5=走査開始停止 / F6=読み上げ / F7=停止 / F8=視線(ドウェル)ON/OFF / F9=2スイッチモード切替" />
        </Border>
    </Grid>
</Window>

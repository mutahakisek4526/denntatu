<UserControl x:Class="AacV1.Views.PcControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Text="PC操作パネル" FontWeight="Bold" FontSize="24" />

        <UniformGrid Grid.Row="1" Columns="4" Margin="0,8,0,0">
            <Button Content="上" Command="{Binding MoveUpCommand}" Margin="4" />
            <Button Content="左" Command="{Binding MoveLeftCommand}" Margin="4" />
            <Button Content="右" Command="{Binding MoveRightCommand}" Margin="4" />
            <Button Content="下" Command="{Binding MoveDownCommand}" Margin="4" />
        </UniformGrid>

        <UniformGrid Grid.Row="2" Columns="4" Margin="0,8,0,0">
            <Button Content="左クリック" Command="{Binding LeftClickCommand}" Margin="4" />
            <Button Content="右クリック" Command="{Binding RightClickCommand}" Margin="4" />
            <Button Content="ダブルクリック" Command="{Binding DoubleClickCommand}" Margin="4" />
            <Button Content="ドラッグ開始" Command="{Binding DragStartCommand}" Margin="4" />
            <Button Content="ドラッグ終了" Command="{Binding DragEndCommand}" Margin="4" />
            <Button Content="スクロール上" Command="{Binding ScrollUpCommand}" Margin="4" />
            <Button Content="スクロール下" Command="{Binding ScrollDownCommand}" Margin="4" />
            <Button Content="Alt+Tab" Command="{Binding AltTabCommand}" Margin="4" />
            <Button Content="Win+D" Command="{Binding WinDCommand}" Margin="4" />
            <Button Content="Ctrl+L" Command="{Binding CtrlLCommand}" Margin="4" />
        </UniformGrid>
    </Grid>
</UserControl>

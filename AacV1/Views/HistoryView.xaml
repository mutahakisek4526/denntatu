<UserControl x:Class="AacV1.Views.HistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ListBox ItemsSource="{Binding Entries}" SelectedItem="{Binding Selected}" DisplayMemberPath="Text" />
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,0">
            <Button Content="再生" Command="{Binding SpeakCommand}" />
            <Button Content="入力欄へ" Margin="8,0,0,0" Command="{Binding RestoreCommand}" />
            <Button Content="お気に入り" Margin="8,0,0,0" Command="{Binding AddFavoriteCommand}" />
        </StackPanel>
    </Grid>
</UserControl>

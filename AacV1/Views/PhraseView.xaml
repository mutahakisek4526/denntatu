<UserControl x:Class="AacV1.Views.PhraseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <StackPanel>
            <TextBlock Text="カテゴリ" FontWeight="Bold" />
            <ListBox ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory}" DisplayMemberPath="Name" Height="240" />
            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                <TextBox Text="{Binding NewCategoryName, UpdateSourceTrigger=PropertyChanged}" Width="200" />
                <Button Content="追加" Margin="8,0,0,0" Command="{Binding AddCategoryCommand}" />
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <TextBlock Text="定型文" FontWeight="Bold" />
            <ListBox ItemsSource="{Binding SelectedCategory.Items}" SelectedItem="{Binding SelectedPhrase}" DisplayMemberPath="Text" Height="240" />
            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                <TextBox Text="{Binding NewPhraseText, UpdateSourceTrigger=PropertyChanged}" Width="300" />
                <Button Content="追加" Margin="8,0,0,0" Command="{Binding AddPhraseCommand}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                <Button Content="削除" Command="{Binding DeletePhraseCommand}" />
                <Button Content="入力欄へ" Margin="8,0,0,0" Click="OnInsertPhrase" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>

<UserControl x:Class="AacV1.Views.SupporterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button Content="バックアップ" Command="{Binding BackupCommand}" Margin="4" />
            <Button Content="復元" Command="{Binding RestoreCommand}" Margin="4" />
            <Button Content="ログ更新" Command="{Binding RefreshLogCommand}" Margin="4" />
        </StackPanel>

        <TextBox Grid.Row="1" Text="{Binding LogText}" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
    </Grid>
</UserControl>

<UserControl x:Class="AacV1.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Text="ホーム" FontSize="26" FontWeight="Bold" />
        <UniformGrid Grid.Row="1" Columns="4" Rows="3" Margin="0,12,0,0">
            <Button Content="50音文字盤" Margin="6" Command="{Binding NavigateCommand}" CommandParameter="Kana" />
            <Button Content="定型文" Margin="6" Command="{Binding NavigateCommand}" CommandParameter="Phrase" />
            <Button Content="履歴" Margin="6" Command="{Binding NavigateCommand}" CommandParameter="History" />
            <Button Content="PC操作" Margin="6" Command="{Binding NavigateCommand}" CommandParameter="PcControl" />
            <Button Content="Web" Margin="6" Command="{Binding NavigateCommand}" CommandParameter="Web" />
            <Button Content="メール" Margin="6" Command="{Binding NavigateCommand}" CommandParameter="Mail" />
            <Button Content="環境制御" Margin="6" Command="{Binding NavigateCommand}" CommandParameter="Env" />
            <Button Content="設定" Margin="6" Command="{Binding NavigateCommand}" CommandParameter="Settings" />
            <Button Content="支援者" Margin="6" Command="{Binding NavigateCommand}" CommandParameter="Supporter" />
            <Button Content="セルフテスト" Margin="6" Command="{Binding NavigateCommand}" CommandParameter="SelfTest" />
        </UniformGrid>
    </Grid>
</UserControl>

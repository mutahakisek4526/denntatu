<UserControl x:Class="AacV1.Views.EnvControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <StackPanel>
            <TextBlock Text="デバイス一覧" FontWeight="Bold" />
            <ListBox ItemsSource="{Binding Devices}" SelectedItem="{Binding Selected}" DisplayMemberPath="Name" Height="300" />
            <Button Content="追加" Command="{Binding AddDeviceCommand}" Margin="0,8,0,0" />
        </StackPanel>

        <StackPanel Grid.Column="1">
            <TextBlock Text="設定" FontWeight="Bold" />
            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                <TextBlock Text="名前" Width="80" />
                <TextBox Text="{Binding Selected.Name, UpdateSourceTrigger=PropertyChanged}" Width="300" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                <TextBlock Text="URL" Width="80" />
                <TextBox Text="{Binding Selected.Url, UpdateSourceTrigger=PropertyChanged}" Width="300" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                <TextBlock Text="メソッド" Width="80" />
                <ComboBox SelectedValue="{Binding Selected.Method}" SelectedValuePath="Content" Width="120">
                    <ComboBoxItem Content="GET" />
                    <ComboBoxItem Content="POST" />
                </ComboBox>
            </StackPanel>
            <TextBlock Text="ボディ(JSON)" Margin="0,8,0,0" />
            <TextBox Text="{Binding Selected.Body, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" Height="100" />
            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                <Button Content="送信" Command="{Binding SendCommand}" />
                <Button Content="保存" Command="{Binding SaveCommand}" Margin="8,0,0,0" />
            </StackPanel>
            <TextBlock Text="{Binding Result}" TextWrapping="Wrap" Margin="0,8,0,0" />
        </StackPanel>
    </Grid>
</UserControl>
